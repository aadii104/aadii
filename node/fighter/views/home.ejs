<!DOCTYPE html>
<html lang="en">
  <head>
    <%include partials/head.ejs%>
  </head>
  <body>
      <% include partials/header.ejs%>
      <div id="hero-image">
        <h1 id="hero-title"><%= title %></h1>
      </div>
      <div id="poster-wrapper" class="content-padding clearfix">
           <% for (var i = 0 ;i < history.length; i++){%>
             <div class="poster">
               <img src="/images/<%=history[i].poster %>" class="img-responsive" style="height:350px; width:300px">

               <div class="poster-info-overlay">
                 <h3><%= history[i].name %></h3>
                 <h4 >View More<i class="fa fa-arrow-right"></i></h4>
               </div>
             </div>
          <%}%>
     </div>
    <% include partials/scripts.ejs %>
    </body>
</html>
